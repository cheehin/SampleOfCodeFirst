@section Scripts{
    <script type="text/javascript">
        $('#DropTable').click(function () {
            $.ajax({
                url: '@Url.Action("DropTable","Home")',
                type: 'POST',
                success: function () {
                    window.alert('Done'); 
                }
            });
        });
    </script>
}